<!DOCTYPE html>
<html>
<head>
    <title>Productos - Admin</title>
</head>
<body>
    <h1>Lista de Productos</h1>
    <a href="/admin/products/new">Agregar nuevo producto</a>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td>
                        <a href="/admin/products/<%= product._id %>/edit">Editar</a>
                        <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
